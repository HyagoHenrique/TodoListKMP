CREATE TABLE Todo (
  id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
  title TEXT NOT NULL,
  isDone INTEGER NOT NULL DEFAULT 0,
  createdAt INTEGER NOT NULL
);

selectAll:
SELECT * FROM Todo
ORDER BY createdAt DESC;

insertTodo:
INSERT INTO Todo(title, isDone, createdAt)
VALUES (?, 0, ?);

deleteTodo:
DELETE FROM Todo
WHERE id = ?;

toggleDone:
UPDATE Todo
SET isDone = CASE WHEN isDone = 1 THEN 0 ELSE 1 END
WHERE id = ?;
